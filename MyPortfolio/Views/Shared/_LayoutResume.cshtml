
@using Microsoft.AspNet.Identity

<!Doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title  ! @ViewBag.Message</title>
    <link rel="icon" type="" href="~/Resources/ShB.ico" />
    <!--Stylesheet-->
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/default.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/about.css" />

    @*<script src="~/scripts/modernizr-2.6.2.js"></script>*@
    @RenderSection("Meta", false)
</head>

<body>

    <!--Content Body Area-->
    <div class="structure fix center">

        <!--Left Side Fixed Area-->
        <div class="left_side area fleft fix">
            <div class="img-over">
                <img src="~/Images/me (1).jpg" class="" />
                <div class="overlay">
                    <h4>Shbsovon</h4>
                </div>
            </div>

            <menu class="main_menu">
                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Hello " + User.Identity.GetUserName(), "Index", "Home", new { area = "" }, new { @class = "menu", @style = "background-color:green" })</li>
                }
                else
                {
                    <li>@Html.ActionLink("Hello World!", "Index", "Home", new { area = "" }, new { @class = "", @style = "background-color:black" })</li>
                }
                <li><a name="about" href="~/Default" class="@(@ViewBag.selectedItem == "Home" ? "now" : "")"><i class="fa fa-user fleft"></i>About</a></li>
                <li><a href="~/Default/portfolio" class="@(@ViewBag.selectedItem == "Portfolio" ? "now" : "")"><i class="fa fa-camera fleft"></i>Portfolio</a></li>
                <li><a href="~/Default/project" class="@(@ViewBag.selectedItem == "Project" ? "now" : "")"><i class="fa fa-code fleft"></i>Project</a></li>
                <li><a href="~/Default/Blog" class="@(@ViewBag.selectedItem == "Blog" ? "now" : "")"><i class="fa fa-file-text fleft"></i>Blog</a></li>
                <li><a href="~/Default/contact" class="@(@ViewBag.selectedItem == "Contact" ? "now" : "")"><i class="fa fa-phone fleft"></i>Contact</a></li>
                <li>@Html.ActionLink("Text View", "", "TestView", new { }, new { })</li>
            </menu>
            <div class="social">
                <a href="http://www.facebook.com/sudhananda.biswas" class="fa fa-facebook"></a>
                <a href="http://www.twitter.com/shbsovon" class="fa fa-twitter"></a>
                <a href="http://bd.linkedin.com/in/shbsovon" class="fa fa-linkedin"></a>
            </div>
            <span>Copyright&copy; @DateTime.Now.Year ~ <i class="fa fa-skype"></i>hbsovon</span>
        </div>

        <!--Right Side Content Area-->
        <div id="paper" class="right_side area fright fix" >
            <h1 class="">@ViewBag.Title</h1>
            <hr style="background-color:darkorange" />

            @RenderBody()

        </div>

        <!--Structure End-->
    </div>

    <div class="fixed_social_link">
        <i class="fa fa-arrow-right fleft"></i>
        <menu class="fright">
            <li><a href="javascript:window.print()" class="fa fa-print"></a></li>
            <li><a href="http://www.facebook.com/cmpt.dip" class="fa fa-facebook"></a></li>
            <li><a href="http://www.twitter.com/shbsovon" class="fa fa-twitter"></a></li>
            <li><a href="http://bd.linkedin.com/in/shbsovon" class="fa fa-linkedin"></a></li>
            <li><a href="http://www.pinterest.com/sudhanandabiswa" class="fa fa-pinterest"></a></li>
            <li><a href="https://goo.gl/SUDhgX" class="fa fa-youtube"></a></li>
            <li><a href="https://goo.gl/vmMPId" class="fa fa-google-plus"></a></li>
        </menu>
    </div>

</body>
</html>
<script src="~/scripts/jquery-1.10.2.min.js"></script>
@RenderSection("JSContent", false)